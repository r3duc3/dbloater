#!/sbin/sh

OUTFD=/proc/self/fd/$2;
ZIPFILE="$3";
ROOT=/system_root;
[ -d /postinstall/tmp ] && POSTINSTALL=/postinstall;
[ "$MYHOME" ] || MYHOME=$POSTINSTALL/tmp/bloater;

ui_print() {
	until [ ! "$1" ]; do
		echo "ui_print $1
			ui_print" >> $OUTFD;
		shift;
	done;
}

abort() {
	ui_print "$@";
	cleanup;
	exit 1;
}

cleanup() {
	cd $(dirname $MYHOME);
	rm -rf $MYHOME;
}